@model List<RoomListViewModel>
    <div class="container-xxl py-5">
        <div class="container">
            <div class="text-center wow fadeInUp" data-wow-delay="0.1s">
                <h5 class="section-title text-center text-primary text-uppercase">Otaqlarımızı incələyə bilərsiniz</h5>
                <h1 class="mb-5">MD <span class="text-primary text-uppercase">Hotel</span></h1>
            </div>
            <div class="row g-4">
            @foreach (var item in (Model.Count() > 3 ? Model.Skip(Model.Count() - 3) : Model))
            {
                <div class="col-lg-4 col-md-6 wow fadeInUp" data-wow-delay="0.2s">
                    <div class="room-item shadow rounded overflow-hidden">
                        <div class="position-relative">
                            <img class="img-fluid" src="@item.RoomCoverImage" alt="">
                            <small class="position-absolute start-0 top-100 translate-middle-y bg-primary text-white rounded py-1 px-3 ms-4">₼ @item.Price</small>
                        </div>
                        <div class="p-4 mt-2">
                            <div class="d-flex justify-content-between mb-3">
                                <h5 class="mb-0">@item.Title</h5>
                                <div class="ps-2">
                                    @for (int i = 0; i < item.Star; i++)
                                    {
                                        <small class="fa fa-star text-primary"></small>
                                    }   
                                </div>
                            </div>
                            <div class="d-flex mb-3">
                                <small class="border-end me-3 pe-3"><i class="fa fa-bed text-primary me-2"></i>@item.BedCount Çarpayı</small>
                                <small class="border-end me-3 pe-3"><i class="fa fa-bath text-primary me-2"></i>@item.BathCount Vanna</small>
                                <small><i class="fa fa-wifi text-primary me-2"></i>Wifi @item.Wifi</small>
                            </div>
                            <p class="text-body mb-3">@item.Description</p>
                            <div class="d-flex justify-content-between">
                                <a class="btn btn-sm btn-primary rounded py-2 px-4" href="">Ətraflı</a>
                                <a class="btn btn-sm btn-dark rounded py-2 px-4" href="">Rezerv et</a>
                            </div>
                        </div>
                    </div>
                </div>
                }
            </div>
        </div>
    </div>


